<p>Hi, <%= @current_user.username %>! Here are your stats:</p>

<table>
  <thead>
    <th>Deck</th>
    <th>Total Cards</th>
    <th>Total Correct</th>
  </thead>

  <% @current_user.games.each do |game| %>
  <tr>
    <td><%= game.deck.name %></td>
    <td><%= game.deck.cards.count %></td>
    <td>
      <% game.guesses.select do |guess| %>
        <% if guess.correct %>
      <% end.count %>
    </td>
  </tr>
  <% end %>
</table>